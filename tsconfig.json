{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*"]
}
